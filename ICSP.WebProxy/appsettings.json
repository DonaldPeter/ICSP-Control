{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "ProxyConfig": {

    /*
    Attribute: LocalHost
    Required : True
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    IP address or host address with port and protocol that the server should listen on for requests. For example, http://localhost:123.
    Use "*" to indicate that the server should listen for requests on any IP address or hostname using the specified port and protocol (for example, http://*:5000).
    The protocol (http:// or https://) must be included with each URL.
    Supported formats vary among servers.
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    Attribute: RemoteHost
    Required : True
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    IP address or host address of AMX-Master controller.
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    Attribute: RemotePort
    Required : False
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    Remote port of AMX-Master controller.
    Default: 1319
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    Attribute: Device
    Required : True
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    Remote port of AMX-Master controller.
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    Attribute: ConfigName
    Required : False
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    Connection Name for Diagnostics
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    Attribute: DeviceName
    Required : False
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    Device name of Device in OnlineTree
    Default: ICSP.WebProxy
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    Attribute: Enabled
    Required : False
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    if false, this connection will ignored
    Default: True
    ----------------------------------------------------------------------------------------------------------------------------------------------------------------
    */

    "Connections": [
      {
        "LocalHost": "http://*",
        "RemoteHost": "172.16.126.250",
        "RemotePort": 1319,
        "Device": 10001,
        "ConfigName": "ProxyPanel",
        "DeviceName": "ICSP.ProxyPanel"
      },
      {
        "LocalHost": "https://*:5001", // SSL
        "RemoteHost": "172.16.126.250",
        "RemotePort": 1319,
        "Device": 10001
      },
      {
        "LocalHost": "http://*:8001",
        "RemoteHost": "172.16.126.250",
        "RemotePort": 1319,
        "Device": 33001,
        "Enabled": false
      },
      {
        "LocalHost": "http://*:8002",
        "RemoteHost": "172.16.126.250",
        "RemotePort": 1319,
        "Device": 33002
      }
    ]
  }
}
